{
    "family": "demo-app-task",
    "containerDefinitions": [
        {
            "name": "demo-app",
            "image": "YOUR_ECR_REPO_URL_HERE",
            "cpu": 256,
            "memory": 512,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "logConfiguration": {
              "logDriver": "awslogs",
              "options": {
                "awslogs-group"         : "/ecs/demo-app",
                "awslogs-region"        : "ap-south-1",
                "awslogs-stream-prefix" : "ecs"
              }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::324037288558:role/demo-app-ecs-task-execution-role"
}
